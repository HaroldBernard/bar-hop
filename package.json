{
  "name": "bar-hop",
  "version": "1.0.0",
  "description": "A scavenger hunt challenge app for adventurous people looking to have fun and find new bars",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HaroldBernard/bar-hop.git"
  },
  "keywords": [
    "bar"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HaroldBernard/bar-hop/issues"
  },
  "homepage": "https://github.com/HaroldBernard/bar-hop#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.4",
    "nodemon": "^1.19.1",
    "react-bootstrap": "^1.0.0-beta.9"
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "query-string": "^6.8.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.1"
  },
  "engines": {
    "node": "8.9.2"
  }
}
